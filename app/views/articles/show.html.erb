<div class="container">
	<div class="row">
				<div class=col-sm-12>
					<h1>
					  <%= @article.title %>
					</h1>
					<p>
					  <small class="text-muted">On <%= @article.created_at.strftime("%B %d %Y, %l:%M%P") %></small>
					</p>
					<p>
					  <%= @article.text %>
					</p>

					<br>

					<div class="col-sm-12"
							<h1>Comments</h1>

							<%= render @article.comments %>


							<h3>Add a comment:</h3>
							<%= render 'comments/form' %>
					</div>

					<div class="btn btn-outline-primary">
						<%= link_to 'Edit', edit_article_path(@article), :class => "btn" %>
					</div>

					<div class="btn btn-outline-primary">
						<%= link_to 'Back', articles_path, :class => "btn"%>
					</div>
				</div
	</div>




</div>
